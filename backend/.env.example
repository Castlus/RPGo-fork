# ─── Supabase ────────────────────────────────────────────────
# Encontre esses valores em: Settings > API no seu projeto Supabase

# Connection pooling via PgBouncer (usado pelo Prisma em produção)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Conexão direta (usada pelo Prisma para migrations)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# URL pública do projeto Supabase (Settings > API > Project URL)
SUPABASE_URL="https://[project-ref].supabase.co"

# Service Role Key (Settings > API > service_role) — NUNCA exponha no frontend!
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ─── Servidor ────────────────────────────────────────────────
PORT=3001

# Origens permitidas para CORS (separadas por vírgula)
CORS_ORIGINS="http://localhost:5500,http://127.0.0.1:5500"
